<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">

<validators>
    <field name="reserve_price">
        <!-- 必须输入项 -->
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>必须输入底价</message>
        </field-validator>
        <!-- 底价必须符合表达式 -->
        <field-validator type="regex">
            <param name="regex"><![CDATA[([1-9]\d*.\d*|0.\d*[1-9]\d*)]]></param>
            <message>限定底价为正浮点数</message>
        </field-validator>
    </field>
    <field name="limit">
        <!-- 必须输入项 -->
        <field-validator type="requiredstring">
            <param name="trim">true</param>
            <message>必须输入涨幅</message>
        </field-validator>
        <!-- user_name必须符合表达式 -->
        <field-validator type="regex">
            <param name="regex"><![CDATA[[1-9]\d*]]></param>
            <message>限定涨幅为正整数</message>
        </field-validator>
    </field>
</validators>