<?xml version="1.0" 	encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="pojo.Balance_log">
        <composite-id >  
            <key-property name="balance_log_id"></key-property>  
            <key-property name="user_id"></key-property>  
     	</composite-id>
        <property name="user_id" />
        <property name="operation_type" />
        <property name="operation_note" />
        <property name="amount" />
    </class>
    
</hibernate-mapping>